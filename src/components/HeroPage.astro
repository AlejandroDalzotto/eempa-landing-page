<style>
  .hero__down {
    transition:
      all 0.3s ease-in-out,
      opacity 1s 0.5s ease-in-out,
      transform 1s 0.5s ease-in-out;
  }

  .hero__down svg {
    animation: blink 1.75s infinite ease-in-out;
  }

  .hero__down svg {
    width: 12px;
    height: auto;
  }

  .hero__down svg:nth-child(1) {
    animation-delay: -0.2s;
  }

  @keyframes blink {
    0%,
    20%,
    80%,
    100% {
      opacity: 0.15;
    }

    50% {
      opacity: 1;
    }
  }
</style>
